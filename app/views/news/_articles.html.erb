<div class="container">
  <div class ="row">
    <% @articles.each_with_index do |x, article_key| %>
      <div class="card col-lg-4 col-md-6 col-sm-12 article">

        <span 
          data-url="<%= x['url'] %>" 
          class="article-title" 
          id="article-<%= article_key %>"
          title="<%= x['title']%>" 
          style="font-weight: bold;"
        > 
            <%= x['title'] %>     
        </span>

        <span><%= x['source']['name'] %></span>
        <%= image_tag(x['urlToImage'] || @image_placeholder, class: 'card-img-top') %>  
        <div class="card-body">
          <h5 class="card-title"><% x['title'] %></h5>
          <p class="card-text"> <%= x['description'] %></p>
        </div>
        <% if current_user %>
          <i data-article-key="<%= article_key %>"  class="far fa-bookmark bookmark" data-toggle="modal" data-target="#create-bookmark"></i>
        <% end %>
      </div>
    <% end %>
  </div>  
</div>

<% if current_user %>
  <%= render 'bookmark' %>
<% end %>
